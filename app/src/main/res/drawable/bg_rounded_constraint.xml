<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="@color/biru_muda"
        android:endColor="@color/biru_langit"
        android:angle="270"/> <!-- 270 = vertikal dari atas ke bawah -->

    <!-- Rounded corners -->
    <corners android:radius="20dp"/>

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#60B0D9"/>
</shape>
