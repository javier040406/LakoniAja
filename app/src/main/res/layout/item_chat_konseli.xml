<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <!-- Pesan dari KONSELI (USER/ANDA) - KANAN -->
    <LinearLayout
        android:id="@+id/layoutKonseli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:visibility="gone"
        android:paddingStart="80dp"
        android:paddingEnd="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/textKonseliMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:minWidth="60dp"
            android:background="@drawable/bg_user_message"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:lineSpacingExtra="3dp"
            android:textStyle="normal"
            android:ellipsize="none"
            android:maxLines="100" />

    </LinearLayout>

    <!-- Pesan dari KONSELOR - KIRI -->
    <LinearLayout
        android:id="@+id/layoutKonselor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:visibility="gone"
        android:paddingStart="16dp"
        android:paddingEnd="80dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/textKonselorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:minWidth="60dp"
            android:background="@drawable/bg_konselor"
            android:padding="16dp"
            android:textColor="#333333"
            android:textSize="15sp"
            android:lineSpacingExtra="3dp"
            android:textStyle="normal"
            android:ellipsize="none"
            android:maxLines="100" />

    </LinearLayout>

</LinearLayout>