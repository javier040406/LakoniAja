<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Reschedule">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:contentDescription="Kembali"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Grup gambar + teks -->
    <TextView
        android:id="@+id/label_bookings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ubah Jadwal"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        android:layout_marginStart="8dp" />

    <LinearLayout
        android:id="@+id/konselor_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/label_bookings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/img_konselor"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_person_24"
            />

        <TextView
            android:id="@+id/label_konselor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Konselor"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Label Jadwal -->
    <TextView
        android:id="@+id/label_jadwal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/jadwal_underline"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/konselor_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/label_tanggal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pilih Jadwal"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/label_jadwal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/txt_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_tanggal"
        android:text="Pilih Tanggal"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_tanggal" />

    <TextView
        android:id="@+id/label_waktu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pilih Waktu"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_tanggal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinnerjam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/user_waktu"
        android:padding="10dp"
        android:background="@drawable/textborder"
        app:layout_constraintTop_toBottomOf="@id/label_waktu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/buttonreschedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/biru_tua"
        android:text="Ubah Jadwal"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spinnerjam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>