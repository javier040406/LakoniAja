<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nama Konselor dengan ikon person -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_person_24"

                android:contentDescription="icon person"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvNamaKonselor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Konselor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/biru_tua"/>
        </LinearLayout>

        <!-- Jenis Konseling -->
        <TextView
            android:id="@+id/tv_jenis_konseling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Konseling"
            android:textSize="14sp"
            android:textColor="@color/abu_muda"
            android:layout_marginTop="4dp"/>

        <!-- Tanggal & Waktu Booking -->
        <TextView
            android:id="@+id/tv_tanggal_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Nov 2025, 14:00"
            android:textSize="14sp"
            android:textColor="@color/abu_muda"
            android:layout_marginTop="2dp"/>

        <!-- Tombol aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnUbahJadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah Jadwal"
                android:backgroundTint="@color/biru_tua"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnBatalJadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batalkan"
                android:backgroundTint="@color/merah"
                android:textColor="@android:color/white"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
