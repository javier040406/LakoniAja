<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Jadwal_Fragment">

    <!-- Label Judul -->
    <TextView
        android:id="@+id/label_bookings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bookings"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Kolom Cari -->
    <EditText
        android:id="@+id/cari"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/kolom"
        android:drawableLeft="@drawable/baseline_search_24"
        android:hint="Search"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="17sp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/label_bookings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Label Pilih -->
    <TextView
        android:id="@+id/label_pilih"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pilih_konseling_underline"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/cari"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- === KONSELOR 1 === -->
    <LinearLayout
        android:id="@+id/formContainer1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/kolom"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/label_pilih"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/konselor1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:text="Nama Konselor 1"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/buttonlihatjadwal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/biru_tua"
            android:text="LIHAT JADWAL"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />
    </LinearLayout>


    <!-- === KONSELOR 2 === -->
    <LinearLayout
        android:id="@+id/formContainer2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/kolom"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/formContainer1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/konselor2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:text="Nama Konselor 2"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/buttonlihatjadwal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/biru_tua"
            android:text="LIHAT JADWAL"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />
    </LinearLayout>


    <!-- === KONSELOR 3 === -->
    <LinearLayout
        android:id="@+id/formContainer3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/kolom"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/formContainer2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/konselor3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:text="Nama Konselor 3"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/buttonlihatjadwal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/biru_tua"
            android:text="LIHAT JADWAL"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/label_jadwal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lihat_jadwal_underline"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/formContainer3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />\

    <LinearLayout
        android:id="@+id/formContainer4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/kolom"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/label_jadwal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Bagian kiri: Nama Konselor + Tanggal & Waktu -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nama konselor -->
            <TextView
                android:id="@+id/jadwal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:text="Nama Konselor"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <!-- Baris Tanggal dan Waktu -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <!-- Tanggal -->
                <TextView
                    android:id="@+id/tanggalJadwal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… Tanggal"
                    android:textColor="@color/biru_tua"
                    android:textSize="14sp" />

                <!-- Spasi kecil antara tanggal dan waktu -->
                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <!-- Waktu -->
                <TextView
                    android:id="@+id/waktuJadwal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ•’ Waktu"
                    android:textColor="@color/biru_tua"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
        <!-- Tombol Ubah Jadwal -->
        <Button
            android:id="@+id/btnubahjadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/biru_tua"
            android:text="UBAH\nJADWAL"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
