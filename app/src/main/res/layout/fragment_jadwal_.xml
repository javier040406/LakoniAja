<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Jadwal_Fragment">

    <!-- ==================== JUDUL ==================== -->
    <TextView
        android:id="@+id/label_bookings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jadwal"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ==================== KOLOM SEARCH ==================== -->
    <EditText
        android:id="@+id/cari"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/kolom"
        android:drawableLeft="@drawable/baseline_search_24"
        android:hint="Search"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="17sp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/label_bookings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ==================== TABS ==================== -->
    <LinearLayout
        android:id="@+id/tabMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/cari"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnKonselor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KONSELOR"
            android:backgroundTint="@color/biru_langit"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnJadwalSaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JADWAL SAYA"
            android:backgroundTint="@color/abu_muda"
            android:textColor="@color/biru_langit"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- ==================== HALAMAN KONSELOR ==================== -->
    <ScrollView
        android:id="@+id/layoutKonselor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tabMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_pilih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Konselor"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/containerKonselor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

    <!-- ==================== HALAMAN JADWAL SAYA ==================== -->
    <ScrollView
        android:id="@+id/layoutJadwal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tabMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_jadwal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jadwal Saya"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvKosong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belum ada jadwal"
                android:textSize="16sp"
                android:textStyle="italic"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone"
                android:textColor="@color/black" />


            <!-- ========== KONTENER JADWAL DINAMIS ========== -->
            <LinearLayout
                android:id="@+id/containerJadwal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
