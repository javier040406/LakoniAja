<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDetail"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_artikel1"/>

        <!-- PERBAIKAN: Tambahkan layout_width dan layout_height -->
        <TextView
            android:id="@+id/tvDetailJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Artikel"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <!-- PERBAIKAN: Tambahkan layout_width dan layout_height -->
        <TextView
            android:id="@+id/tvDetailIsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi artikel..."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvSumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:textSize="15dp"
            android:text="Lihat sumber artikel"
            android:textColor="@color/biru_tua"
            android:textStyle="bold" />



    </LinearLayout>

</ScrollView>