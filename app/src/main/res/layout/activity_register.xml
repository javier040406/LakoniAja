<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru_muda"
    tools:context=".RegisterActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logolakoni"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/lakoni"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Card Form -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@+id/logolakoni"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".RegisterActivity">

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/card_radius"
            android:elevation="6dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Daftar"
                android:textColor="@color/biru_tua"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <!-- Nama -->
            <TextView
                android:id="@+id/label_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textColor="@color/biru_tua"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/input_field"
                android:hint="Nama Lengkap"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:inputType="text"
                android:textSize="15dp"
                android:padding="12dp"/>

            <!-- NIM -->
            <TextView
                android:id="@+id/label_nim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIM"
                android:textColor="@color/biru_tua"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/nim"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/input_field"
                android:hint="NIM"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:inputType="text"
                android:textSize="15dp"
                android:padding="12dp"/>

            <!-- Email -->
            <TextView
                android:id="@+id/label_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/biru_tua"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/input_field"
                android:hint="nim@student.polije.ac.id"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:inputType="textEmailAddress"
                android:textSize="15dp"
                android:padding="12dp"/>

            <!-- Tanggal Lahir -->
            <TextView
                android:id="@+id/label_tanggal_lahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textColor="@color/biru_tua"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/tanggal_lahir"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/input_field"
                android:hint="YYYY/MM/DD"
                android:padding="12dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:focusable="false"
                android:clickable="true"/>

            <!-- No HP -->
            <TextView
                android:id="@+id/label_no_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No HP"
                android:textColor="@color/biru_tua"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/no_hp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/input_field"
                android:hint="081234567890"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:inputType="phone"
                android:padding="12dp"/>

            <!-- Username -->
            <TextView
                android:id="@+id/label_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/biru_tua"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/input_field"
                android:hint="Masukkan Username"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:inputType="text"
                android:textSize="15dp"
                android:padding="12dp"/>

            <!-- Password -->
            <TextView
                android:id="@+id/label_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/biru_tua"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/input_field"
                android:hint="Masukkan Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:padding="12dp"
                android:textSize="15dp"
                android:drawableRight="@drawable/matatutup"/>

            <!-- Button -->
            <Button
                android:id="@+id/buttonregister"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/biru_tua"
                android:text="Daftar"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="35dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>