<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".Beranda_Fragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Bagian Header Atas -->
        <LinearLayout
            android:id="@+id/topHeader"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HELLO"
                    android:textColor="#1F1F1F"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apa yang sedang kamu rasakan?"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile" />
        </LinearLayout>

        <!-- Banner Tengah Dengan Shadow -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded_constraint"
            android:padding="12dp"
            android:elevation="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAKONI AJA!"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Platform ini hadir sebagai ruang aman, nyaman, dan mudah diakses oleh mahasiswa Polije..."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:src="@drawable/_6c2d78b4db42b4bcb41c34b7dd327fdc290922f_1_" />
        </LinearLayout>

        <!-- Dua Tombol Utama Dengan Shadow -->
        <LinearLayout
            android:id="@+id/menuLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/textborder"
                android:elevation="4dp"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/btn_mulai_konseling"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/screenshot_2025_10_22_174234"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/textborder"
                android:elevation="4dp"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/btn_artikel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/artikel"/>
            </FrameLayout>

        </LinearLayout>

        <!-- Testimoni -->
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KATA MEREKA"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="24dp" />

        <!-- RecyclerView untuk Testimoni dinamis -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTestimoni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>